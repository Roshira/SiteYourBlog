@{
    ViewData["Title"] = "Blog News";
    var newsArticles = new List<dynamic>
    {
        new { Title = "New Features in ASP.NET Core", Content = "In the latest release, ASP.NET Core introduces several exciting new features..." },
        new { Title = "What's New in C# 9", Content = "C# 9 brings a lot of new improvements to the language, including record types..." },
        new { Title = "Exploring Cloud Computing", Content = "Cloud computing has been a game-changer for businesses, offering scalable infrastructure..." }
    };
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(to bottom right, #f8f9fa, #e3f2fd);
            color: #333;
            min-height: 100vh;
            margin: 0;
            padding: 0;
        }

        .news-container {
            max-width: 800px;
            margin: 3rem auto;
            background-color: #fff;
            padding: 2rem;
            border-radius: 16px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            border-left: 8px solid #006eff;
        }

            .news-container h2 {
                font-size: 1.8rem;
                color: #1e3a8a;
                display: flex;
                align-items: center;
                margin-bottom: 1.5rem;
            }

                .news-container h2::before {
                    content: "📰";
                    font-size: 1.6rem;
                    margin-right: 0.6rem;
                }

        .news-article {
            margin-bottom: 2rem;
        }

            .news-article h3 {
                color: #333;
                margin-bottom: 0.5rem;
            }

            .news-article p {
                font-size: 1.05rem;
                line-height: 1.6;
            }

        .reaction-buttons {
            margin-top: 1rem;
        }

            .reaction-buttons button {
                margin-right: 1rem;
                padding: 0.4rem 1rem;
                font-size: 1rem;
                border: none;
                border-radius: 6px;
                cursor: pointer;
            }

        .like-btn {
            background-color: #28a745;
            color: white;
        }

        .dislike-btn {
            background-color: #dc3545;
            color: white;
        }

        .like-btn:hover {
            background-color: #218838;
        }

        .dislike-btn:hover {
            background-color: #c82333;
        }

        hr {
            border: none;
            border-top: 1px solid #ddd;
            margin: 2rem 0;
        }
    </style>
</head>
<body>

    <div class="news-container">
        <h2>Latest Blog News</h2>
        @foreach (var article in newsArticles)
        {
            <div class="news-article">
                <h3>@article.Title</h3>
                <p>@article.Content</p>

                <div class="reaction-buttons">
                    <button class="like-btn">👍 Like (0)</button>
                    <button class="dislike-btn">👎 Dislike (0)</button>
                </div>
            </div>
            <hr />
        }
    </div>

</body>
</html>
