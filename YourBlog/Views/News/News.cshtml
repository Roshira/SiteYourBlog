@{
    ViewData["Title"] = "Blog News";
    var newsArticles = new List<dynamic>
    {
        new { Title = "New Features in ASP.NET Core", Content = "In the latest release, ASP.NET Core introduces several exciting new features..." },
        new { Title = "What's New in C# 9", Content = "C# 9 brings a lot of new improvements to the language, including record types..." },
        new { Title = "Exploring Cloud Computing", Content = "Cloud computing has been a game-changer for businesses, offering scalable infrastructure..." }
    };
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f9f9f9;
            color: #333;
            margin: 0;
            padding: 0;
            border-radius: 12px;
        }

        h1 {
            color: #222;
            font-size: 2rem;
            margin-top: 1rem;
        }

        section {
            padding: 2rem;
            margin: 2rem auto 1rem auto;
            max-width: 800px;
            background-color: #ffffff;
            margin-bottom: 1rem;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.06);
            border: 2px solid #007bff;
        }

            section:last-of-type {
                margin-bottom: 4rem;
            }

        h2 {
            color: #444;
            margin-bottom: 0.5rem;
        }

        p {
            font-size: 1.05rem;
            line-height: 1.6;
        }

        a {
            color: #007acc;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        strong {
            color: #2c3e50;
        }

        .reaction-buttons {
            margin-top: 1rem;
        }

            .reaction-buttons button {
                margin-right: 1rem;
                padding: 0.4rem 1rem;
                font-size: 1rem;
                border: none;
                border-radius: 6px;
                cursor: pointer;
            }

        .like-btn {
            background-color: #28a745;
            color: white;
        }

        .dislike-btn {
            background-color: #dc3545;
            color: white;
        }

        .like-btn:hover {
            background-color: #218838;
        }

        .dislike-btn:hover {
            background-color: #c82333;
        }

    </style>
</head>
<body>

    <section>
        <h2>Latest Blog News</h2>
        @foreach (var article in newsArticles)
        {
            <div>
                <h3>@article.Title</h3>
                <p>@article.Content</p>

                <div class="reaction-buttons">
                    <button class="like-btn">👍 Like (0)</button>
                    <button class="dislike-btn">👎 Dislike (0)</button>
                </div>
            </div>
            <hr />
        }
    </section>

</body>
</html>
