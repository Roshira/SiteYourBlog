@model YourBlog.Models.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Profile";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(to bottom right, #f8f9fa, #e3f2fd);
            margin: 0;
            padding: 0;
            color: #333;
            min-height: 135vh;
            display: flex;
            flex-direction: column;
        }

        .container {
            max-width: 1000px;
            margin: 2rem auto;
            flex: 1;
            padding: 0 15px;
        }

        h1 {
            text-align: center;
            margin-bottom: 2rem;
            color: #2c3e50;
        }

        .profile-card {
            display: flex;
            flex-wrap: wrap;
            gap: 2rem;
            margin-bottom: 3rem;
        }

        .profile-left {
            flex: 1 1 250px;
            text-align: center;
        }

            .profile-left img,
            .profile-left .placeholder {
                width: 200px;
                height: 200px;
                border-radius: 50%;
                object-fit: cover;
                margin-bottom: 1rem;
            }

        .placeholder {
            background-color: #6c757d;
            color: white;
            font-size: 3rem;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .btn {
            display: inline-block;
            padding: 0.5rem 1.2rem;
            font-size: 1rem;
            border-radius: 8px;
            text-decoration: none;
            cursor: pointer;
            transition: 0.3s ease;
        }

        .btn-outline-primary {
            color: #007bff;
            border: 2px solid #007bff;
            background-color: transparent;
        }

            .btn-outline-primary:hover {
                background-color: #007bff;
                color: white;
            }

        .btn-danger {
            background-color: #dc3545;
            color: white;
            border: none;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }

        .profile-right {
            flex: 2;
        }

        .card {
            background-color: white;
            border-radius: 16px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
            padding: 2rem;
            min-height: 100%;
        }

        .card-title {
            font-size: 1.8rem;
            color: #2c3e50;
        }

        .text-muted {
            color: #6c757d;
            margin-bottom: 1rem;
        }

        hr {
            border-top: 1px solid #dee2e6;
            margin: 1.5rem 0;
        }

        h5 {
            margin-bottom: 0.5rem;
            color: #007bff;
        }

        form {
            margin-top: 2rem;
        }

        footer {
            text-align: left;
            margin-top: 4rem;
            color: #555;
            font-size: 0.95rem;
        }

            footer a {
                color: #007acc;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }

          
    </style>
</head>
<body>
    <div class="container">
        <h1><i class="fas fa-user-circle"></i> Your Profile</h1>

        <div class="profile-card">
            <div class="profile-left d-flex flex-column align-items-center">
                @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
                {
                    <img src="@Model.ProfilePictureUrl" alt="Profile Picture"
                         class="img-fluid rounded-circle mb-3" style="width: 200px; height: 200px; object-fit: cover;" />
                }
                else
                {
                    <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center mb-3"
                         style="width: 200px; height: 200px;">
                        <span class="text-white" style="font-size: 3rem;">@Model.UserName[0]</span>
                    </div>
                }

                <a asp-action="Edit" class="btn btn-outline-primary mt-2">Edit Profile</a>
            </div>

            <div class="profile-right">
                <div class="card">
                    <h3 class="card-title">@Model.FullName</h3>
                    <h5 class="text-muted">@Model.UserName</h5>

                    <hr />

                    <div class="mb-3">
                        <h5><i class="fas fa-info-circle"></i> About</h5>
                        <p>@(string.IsNullOrEmpty(Model.Bio) ? "No bio yet." : Model.Bio)</p>
                    </div>

                    <div class="mb-3">
                        <h5><i class="fas fa-envelope"></i> Contact</h5>
                        <p>Email: @Model.Email</p>
                    </div>

                    <div class="mb-3">
                        <h5><i class="fas fa-user-clock"></i> Account Info</h5>
                        <p>Member since: @Model.ProfileCreated.ToShortDateString()</p>
                        <p>Newsletter: @(Model.IsSubscribed ? "Subscribed ✅" : "Not Subscribed ❌")</p>
                    </div>

                    <form asp-controller="Accounts" asp-action="Logout" method="post">
                        <button type="submit" class="btn btn-danger"><i class="fas fa-sign-out-alt"></i> Logout</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>