@{
    ViewData["Title"] = "Contact Us";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(to bottom right, #f8f9fa, #e3f2fd);
            color: #333;
            margin: 0;
            padding: 0;
        }

        .contact-container {
            max-width: 700px;
            margin: 3rem auto;
            background-color: #fff;
            padding: 2rem;
            border-radius: 16px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            border-left: 8px solid #006eff;
        }

            .contact-container h2 {
                font-size: 1.8rem;
                color: #1e3a8a;
                display: flex;
                align-items: center;
                margin-bottom: 1.5rem;
            }

                .contact-container h2::before {
                    content: "📬";
                    font-size: 1.6rem;
                    margin-right: 0.6rem;
                }

            .contact-container ul {
                list-style: none;
                padding: 0;
                margin: 0;
            }

            .contact-container li {
                padding: 1rem 0.5rem;
                border-bottom: 1px solid #ddd;
                font-size: 1.1rem;
            }

            .contact-container strong {
                color: #2c3e50;
                margin-right: 0.5rem;
            }

            .contact-container a {
                color: #007acc;
                text-decoration: none;
            }

                .contact-container a:hover {
                    text-decoration: underline;
                }

        footer {
            text-align: left;
            margin-top: 4rem;
            color: #555;
            font-size: 0.95rem;
        }

            footer a {
                color: #007acc;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>

    <div class="contact-container">
        <h2>Get in Touch</h2>
        <ul>
            <li><strong>Bogdan:</strong> <a href="mailto:bogdanpomasly@gmail.com">bogdanpomasly@gmail.com</a></li>
            <li><strong>Roma:</strong> <a href="mailto:email@mail.com">email@mail.com</a></li>
            <li><strong>Radion:</strong> <a href="mailto:email@mail.com">email@mail.com</a></li>
        </ul>
    </div>

   

</body>
</html>
