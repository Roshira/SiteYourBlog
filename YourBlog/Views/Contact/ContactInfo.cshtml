@{
    ViewData["Title"] = "Contact Us";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f9f9f9;
            color: #333;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        section {
            padding: 2rem;
            margin: 4rem auto 3rem auto; /* відступ зверху та знизу */
            max-width: 800px;
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.06);
            border: 2px solid #007bff; /* синя рамка */
        }

        h2 {
            color: #444;
            margin-bottom: 1rem;
            font-size: 1.5rem;
        }

        ul {
            list-style-type: none;
            padding-left: 0;
        }

        li {
            margin-bottom: 1.2rem;
            font-size: 1.05rem;
        }

        a {
            color: #007acc;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        strong {
            color: #2c3e50;
        }
    </style>
</head>
<body>

    <section>
        <h2>Email us at:</h2>
        <ul>
            <li>
                <strong>Bogdan:</strong>
                <a href="mailto:bogdanpomasly@gmail.com">bogdanpomasly@gmail.com</a>
            </li>
            <li>
                <strong>Roma:</strong>
                <a href="mailto:email@mail.com">email@mail.com</a>
            </li>
            <li>
                <strong>Radion:</strong>
                <a href="mailto:email@mail.com">email@mail.com</a>
            </li>
        </ul>
    </section>

</body>
</html>
