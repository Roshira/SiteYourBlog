@model YourBlog.Models.News
@{
    ViewData["Title"] = "Додати новину";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <form asp-action="CreateNews" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Заголовок новини -->
        <div class="form-group mb-3">
            <label asp-for="Title" class="control-label">Заголовок</label>
            <input asp-for="Title" class="form-control" placeholder="Введіть заголовок новини" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <!-- Вміст новини -->
        <div class="form-group mb-3">
            <label asp-for="Content" class="control-label">Зміст новини</label>
            <textarea asp-for="Content" class="form-control" rows="8" placeholder="Введіть текст новини"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <!-- Рівень доступу -->
        <div class="form-group mb-4">
            <label asp-for="AccessLevel" class="control-label">Рівень доступу</label>
            <select asp-for="AccessLevel" class="form-control">
                <option value="0">Для всіх користувачів</option>
                <option value="1">Тільки для авторизованих</option>
                <option value="2">Тільки для підписників</option>
            </select>
            <span asp-validation-for="AccessLevel" class="text-danger"></span>
        </div>

        <!-- Кнопки -->
        <div class="form-group d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Опублікувати
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> На головну
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- Підключення Font Awesome для іконок -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    <!-- Стилі для форми -->
    <style>
        .form-control {
            border-radius: 0.25rem;
            border: 1px solid #ced4da;
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }

            .form-control:focus {
                border-color: #80bdff;
                box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
            }

        textarea.form-control {
            min-height: 200px;
            resize: vertical;
        }

        .btn {
            padding: 0.375rem 1.5rem;
        }
    </style>
}