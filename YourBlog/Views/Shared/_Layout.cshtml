<!DOCTYPE html>
<html lang="en">
<head>
   
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YourBlog</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/YourBlog.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav style="display: flex; justify-content: space-between; align-items: center; padding: 10px; background: white; border-bottom: 1px solid #ddd; box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);">
            <div>
                <a href="/" style="font-size: 24px; font-weight: bold; text-decoration: none; color: black;">YourBlog</a>
            </div>
            <ul style="list-style: none; display: flex; gap: 20px; margin: 0; padding: 0;">
                <li><a asp-controller="Home" asp-action="Index" style="text-decoration: none; color: black;">Home</a></li>
                <li><a asp-controller ="Home" asp-action="Privacy" style="text-decoration: none; color: black;">Subscribe</a></li>
                <li><a asp-controller="Home" asp-action="Privacy" style="text-decoration: none; color: black;">About us</a></li>
            </ul>
            <!-- Кнопка Profile у правому куті -->
            <div>
                <a asp-controller="Home" asp-action="Privacy" style="text-decoration: none; color: black; display: flex; align-items: center; gap: 5px;">
                    <span style="font-size: 20px;">👤</span> Profile
                </a>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - YourBlog - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
